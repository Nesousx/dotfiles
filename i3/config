# Bumblee-status
bar {
    font pango:Inconsolata 12
    position top
    status_command bumblebee-status \
        -m redshift cpu memory nic battery date time \
        -p time.format="%H:%M" date.format="%a, %b %d %Y" \
        nic.states=^down \
        redshift.location=manual redshift.lat=49.4 redshift.lon=6.24 redshift.adjust=false \
        -t nord-colorful
}

